<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:tools="http://schemas.android.com/tools"
             android:layout_width="match_parent"
             android:layout_height="match_parent"
             tools:context="com.example.mdjahirulislam.simplemap.fragment.ShowExpenseFragment">

    <!-- TODO: Update blank fragment layout -->
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_margin="5dp">
        <TextView
            android:id="@+id/noExpenseTV"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="No Expense Found"
            android:gravity="center"
            android:textSize="@dimen/activity_travel_event_details_test_sie"
            android:visibility="visible"/>
        <android.support.v7.widget.RecyclerView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:id="@+id/expenseRV">

        </android.support.v7.widget.RecyclerView>
    </LinearLayout>

</FrameLayout>
