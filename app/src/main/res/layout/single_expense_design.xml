<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:orientation="vertical"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:layout_margin="5dp"
    android:background="@color/colorAccent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">
        <TextView
            android:id="@+id/singleExpenseDetailsTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Details"
            android:textSize="@dimen/activity_travel_event_details_test_sie"/>
        <TextView
            android:id="@+id/singleExpenseAmountTV"
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Tk"
            android:textSize="@dimen/activity_travel_event_details_test_sie"/>
    </LinearLayout>
    <TextView
        android:id="@+id/singleExpenseDateTV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Date"
        android:textSize="16sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:paddingBottom="5dp">
        <TextView
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="wrap_content"
            android:text="Voucher"
            android:textSize="16sp"/>
        <TextView
            android:id="@+id/singleExpenseVoucherTV"
            android:layout_width="0dp"
            android:layout_weight="2"
            android:layout_height="wrap_content"
            android:text="No voucher Available."
            android:visibility="visible"/>

    </LinearLayout>
    <ImageView
        android:id="@+id/singleExpenseVoucherIV"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:src="@drawable/default_pro_pic"
        android:scaleType="fitXY"
        android:padding="10dp"
        android:visibility="gone"/>
    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:background="@android:color/black"/>


</LinearLayout>