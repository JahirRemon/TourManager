<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:gravity="center"
    android:layout_margin="10dp"
    tools:context="com.example.mdjahirulislam.simplemap.activity.AddExpenseActivity">


    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/expenseDetailsET"
            android:background="@drawable/text_view_design"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Expense Details"
            android:inputType="text"
            android:textSize="20sp"
            android:paddingLeft="10dp"
            android:maxLines="1"
            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>

    <android.support.design.widget.TextInputLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <EditText
            android:id="@+id/expenseAmountET"
            android:background="@drawable/text_view_design"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:hint="Expense Amount TK"
            android:paddingLeft="10dp"
            android:inputType="number"
            android:textSize="20sp"
            android:maxLines="1"
            android:singleLine="true"/>

    </android.support.design.widget.TextInputLayout>


    <TextView
        android:id="@+id/expenseDateTV"
        android:background="@drawable/text_view_design"
        android:gravity="center_vertical"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:hint="Date"
        android:textSize="20sp"
        android:paddingLeft="10dp"/>

    <LinearLayout
        android:id="@+id/voucherLayout"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:orientation="horizontal">
        <Button
            android:id="@+id/voucherBtn"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:drawableLeft="@android:drawable/ic_menu_camera"
            android:textSize="20sp"
            android:textAllCaps="false"
            android:text="Select Voucher Image"/>
        <!--<TextView-->
        <!--android:layout_width="match_parent"-->
        <!--android:layout_height="wrap_content"-->
        <!--android:text="Select Voucher Image"-->
        <!--android:textSize="@dimen/activity_travel_event_details_test_sie"/>-->
    </LinearLayout>

    <ImageView
        android:id="@+id/voucherIV"
        android:layout_width="200dp"
        android:layout_height="200dp"
        android:src="@drawable/camera"/>

    <Button
        android:id="@+id/addExpenseBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Save"
        android:textSize="20sp"
        android:textAllCaps="false"
        android:onClick="addExpenseBtn"/>

</LinearLayout>
